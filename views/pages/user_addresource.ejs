<div class="container">
    


     <!-- Add product  -->
    <form action="uaddresource" method="post" enctype="multipart/form-data">
     <div class="main" >
            <div class="formcards">
                <div class="formcard">
                    <div class="card-content form-container">

                        <h1>ADD Resource</h1>
                        <form method="POST" action="" enctype="multipart/form-data">
                            <div class="form-group mb-3">
                                <label class="form-label">Name</label>
                                <input type="text" class="form-control" name="name" required>
                            </div>
                            <div class="form-group mb-3">
                        <label for="stock">Select a Category:</label>
                            <select class="form-control" id="type" name="category">
                                <option value=" " >
                                    
                                </option>
                                <option value="Software-Engineer">Software Engineer</option>
                                <option value="Cyber-Security">Cyber Security</option>
                                <option value="AI">AI</option>
                            </select>

                        </div>
                            <div class="form-group mb-3">
                                <label class="form-label">Link</label>
                                <input type="text" class="form-control" name="link" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label">Description</label>
                                <input type="text" class="form-control" name="description" required>
                            </div>
                            <div class="form-group mb-3">
                              <label for="newProductImage" class="form-label">Image</label>
                              <input type="file" class="form-control" id="newProductImage"
                                  accept="image/png, image/gif, image/jpeg , image/webp" name="image" required>
                          </div>
                          <input type="hidden" name="notification" value="false" >
                          <input type="hidden" name="approval" value="false" >
                            <div class="form-group mb-3">
                                <input type="submit"  value="ADD Resource"
                                    style="background-color: #007BFF; color: #fff; padding: 10px 20px; border: none; cursor: pointer;">
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
</body>
