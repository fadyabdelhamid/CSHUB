<head>
  <%- include('../partials/head'); %>
  <%- include('../partials/header'); %>
</head>
<div class="container courses">
  <h1>Latest courses</h1>
  <div class="courses">
    <div class="row">
      <% resource.forEach(function(resource) { %>
        <div class="col-sm-8 col-md-4 col-lg-3">
          <div class="card">
            <a href=<%="/resourcesDetails/" +resource._id %>
              >
              <img class="card-img-top" alt="<%= resource.name%>" src=<%=resource.image%>
              />
            </a>
            <div class="card-body">

              <a href=<%="/resourcesDetails/" +resource._id %>>
                <h5 class="card-title">
                  <%= resource.name %>
                </h5>
              </a>
              <!-- Rating component would be here, but it cannot be converted directly to HTML -->
            
              <form action="/enroll/<%= resource._id %>" method="POST">
                <button type="submit" class="btn btn-primary"> Enroll</button>
              </form>
            </div>
          </div>
        </div>
        <% }); %>
    </div>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.3/js/bootstrap.bundle.min.js"></script>
